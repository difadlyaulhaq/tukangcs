    if (perluPerhatianEl) perluPerhatianEl.textContent = data.stats.perluPerhatian ?? "0";

    if (aktivitasList && data.stats.pesanTerbaru) {
      aktivitasList.innerHTML = "";
      data.stats.pesanTerbaru.forEach((item) => {
